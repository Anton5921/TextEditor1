<Window x:Class="TextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Editor" Height="350" Width="500">
    <Grid>
        <Menu Height="20" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="New" Click="New_Click"/>
                <MenuItem Header="Open" Click="Open_Click"/>
                <MenuItem Header="Save" Click="Save_Click"/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Copy" Click="Copy_Click"/>
                <MenuItem Header="Paste" Click="Paste_Click"/>
                <MenuItem Header="Delete" Click="Delete_Click"/>
            </MenuItem>
            <MenuItem Header="Font Thickness">
                <MenuItem Header="Thin" Click="Thin_Click"/>
                <MenuItem Header="Normal" Click="Normal_Click"/>
                <MenuItem Header="Bold" Click="Bold_Click"/>
            </MenuItem>
        </Menu>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="300" Margin="10,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="480"/>
    </Grid>
</Window>
